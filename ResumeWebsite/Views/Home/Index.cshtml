                        <h2>Floor After Floor</h2>
                    </div>
                </li>
            </ul>
        </div>

        <button class="slider__button slider__button--right">
            <img src="~/Resources/Images/right-arrow.png" />
        </button>
    </div>
    
    
    
    
    
    
    
